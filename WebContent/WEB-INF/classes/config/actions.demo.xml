<root>		
    <handler path="/demo" path-pattern=".service" class="j.app.webserver.demo.DemoHandler" request-by="request" non-nvwa-obj="true">
    	<action name="测试1" id="test1" method="test11" respond-with-string="true"> 
    		<log avail="false">
    			<p>param_a</p>
    			<p>param_b</p>
    		</log>
    	</action>
    	<action name="测试2" id="test2" method="test22">
