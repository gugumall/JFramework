<?xml version="1.0" encoding="UTF-8"?>
<root>	
	<!-- 默认通信方式 -->
	<service-channel>http</service-channel>
	
	<!-- 最大文件（K） -->
	<max-file-size>102400</max-file-size>
	
	<!-- service-code为对应的服务编码，service-channel表示调用服务的方式（http或rmi)，os表示目标机器操作系统类型windows/linux-->
	<!-- 目录分割一律使用/（系统会进行处理）-->
	<mapping service-code="JFS.jshop" service-channel="http" os="windows">
		<rule selector="^JDFS://jshop/[ig]{1}/[\S ]{0,}$" virtual-root="JDFS://jshop/" physical-root="c:/tomcat/webapps/crawler/ROOT/"></rule>
		<rule selector="^JDFS://jshop/goods/[\S ]{0,}$" virtual-root="JDFS://jshop/" physical-root="c:/tomcat/webapps/crawler/ROOT/"></rule>
		<rule selector="^JDFS://jshop/js/[\S ]{0,}$" virtual-root="JDFS://jshop/" physical-root="c:/tomcat/webapps/crawler/ROOT/"></rule>
		<rule selector="^JDFS://jshop/article/[\S ]{0,}$" virtual-root="JDFS://jshop/" physical-root="c:/tomcat/webapps/crawler/ROOT/"></rule>
		<rule selector="^JDFS://jshop/seo/[\S ]{0,}$" virtual-root="JDFS://jshop/" physical-root="c:/tomcat/webapps/crawler/ROOT/"></rule>
		<rule selector="^JDFS://jshop/news/[\S ]{0,}$" virtual-root="JDFS://jshop/" physical-root="c:/tomcat/webapps/crawler/ROOT/"></rule>
		<rule selector="^JDFS://jshop/[\S ]{0,}$" virtual-root="JDFS://jshop/" physical-root="c:/tomcat/webapps/crawler/ROOT/" local="true"></rule>
	</mapping>
	
	<!-- 文件监视器（获取文件最新修改时间等）,仅限web根目录下文件 -->
	<monitor>
	    <file>/css/main.css</file>	    
	</monitor>
</root>	